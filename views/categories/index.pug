doctype html
html
  head
    title Lista de Categorías
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='/categories') Categorías
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='/categories/create') Nueva Categoría

    .container.mt-4
      h1 Lista de Categorías
      table.table
        thead
          tr
            th ID
            th Nombre
            th Descripción
            th Imagen
            th Acciones
        tbody
          each category in categories
            tr
              td #{category.id}
              td #{category.name}
              td #{category.description}
              td 
                if category.image  
                  img(src=category.image width='50')
              td
                a.btn.btn-primary(href=`/categories/${category.id}/edit`) Editar
                form(action=`/categories/${category.id}/delete`, method="POST", style="display:inline")
                  button.btn.btn-danger(type="submit") Eliminar
