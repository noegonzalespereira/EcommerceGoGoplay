doctype html
html(lang="es")
    head
        title #{title || 'Mi Tienda de Juguetes'}
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css")
        //- En layout.pug, en el head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet")
        style.
            .cart-icon {
                position: relative;
            }
            .cart-badge {
                position: absolute;
                top: -8px;
                right: -8px;
                font-size: 0.7em;
            }
            .product-card {
                transition: transform 0.2s;
            }
            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }
        block styles

    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-4
            .container-fluid
                a.navbar-brand(href='/') 
                  img(src='/images/logo_principal.gif' alt='Mi Tienda de Juguetes' style="height: 50px;")
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav.me-auto
                        li.nav-item
                            a.nav-link(href='/') Inicio
                        li.nav-item
                            a.nav-link(href='/catalogo') Catálogo
                        li.nav-item
                            a.nav-link(href='/categories') Categorías
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.cart-icon(href='/cart')
                                i.bi.bi-cart-fill
                                if cartItemCount
                                    span.badge.bg-danger.cart-badge= cartItemCount
                                else
                                    span.badge.bg-danger.cart-badge 0

        block content

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
        block scripts